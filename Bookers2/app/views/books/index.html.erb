
 <div class="container">
  <div class="row">
   <div class="col-xs-3">

    <%= render 'info', book: @book, user: @user %>
    </div>
    <div class="body">
     <div class="col-xs-9">
      <h2>Books</h2>

       <table class="table table-hover table-inverse">
         <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>

          </tr>
         </thead>

          <tbody>
           <%  @books.each  do |f| %>
           <tr>
             <td><%= link_to user_path(f) do %><%= attachment_image_tag f.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><% end %></td>
             <td><%= link_to book_path(f.id) do %><%= f.title %><% end %></td>
             <td><%= f.body %></td>
           </tr>
           <% end %>
          </tbody>
       </table>
     </div>
    </div>
  </div>
</div>
