<div class="body">
    <% if flash[:notice] %>
     <p><%= flash[:notice] %></p>
    <% end %>
    <div class="row">

        <h2>User info</h2>
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:"100x100" %>
          <div class="col-xs-12">
              <table class="table">
                <tbody><tr></tr>
                  <tr>
                     <th>name</th>
        	           <th><%= user.name %></th>
                  </tr>
                  <tr>
        	          <th>introduction</th>
        	          <th><%= user.introduction %></th>
                  </tr>
                </tbody>
              </table>


            <%= link_to edit_user_path(current_user),class:"btn btn-default glyphicon glyphicon-wrench col-xs-12" do %>
            <% end %>

            <% if book.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
                <ul>
                  <% book.errors.full_messages.each do |message| %>
                  <li><%= message + "error" %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="row">

                   <h2 class"h2">New book</h2>
                  </div>

                  <%= form_with model:book, url:'/books', local: true do |f| %>

                  <div class="field row">
                    <div class="book_title">Title</div>
                    <%= f.text_field :title,class:"col-xs-12" %>
                  </div>
                  <div class="field row">
                    <div class="book_body">Opinion</div>
                    <%= f.text_area :body,rows:"2",class:"col-xs-12" %>
                  </div>
                  <div class="field row">
                    <div class="actions row"></div>
                    <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
                  </div>
                  <% end %>
            </div>
    </div>
  </div>
