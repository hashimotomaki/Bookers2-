<div class="container">
  <div class="row">
   <div class="col-xs-3">

     <%= render 'books/info', book: @newbook, user: @user %>
   </div>
  <div class="body">
     <% form_with model:@book, local:true do |f| %>
     <% if @book.errors.any? %>
     <div id="error_explanation" class="alert alert-danger">
       <ul>
         <% @book.errors.full_messages.each do |message| %>
         <li><%= message + "error" %></li>
         <% end %>
       </ul>
     </div>
     <% end %>
     <% end %>

     <div class="col-xs-9">
       <h2>Book detail</h2>
         <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:"50x50" %><br>
                <%= @user.name %><% end %></td>
                <td colspan="3"></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>

                <% if @book.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@book.id)%></td>
                <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
                <% end %>
              </tr>
            </tbody>
         </table>
     </div>
    </div>
   </div>
  </div>

