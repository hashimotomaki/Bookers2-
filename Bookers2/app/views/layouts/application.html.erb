<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel=”stylesheet” href=”https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css”>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="csrf-param" content="authenticity_token">
    <meta name="csrf-token" content="mRdnHfi4t0AuzDxKwMVYvaKbXtFizHtEnHzCwuLPMhu64o//MzHdBVtHTW6Kx3lOiU+eLCcghK1dAZM9qJV4iA==">
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
         <span>Bookers</span>
        </nav>
       <div id="slidemenu">
           <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
           <% if user_signed_in? %>

             <li class="">
               <%= link_to user_path(current_user.id) do %>
               <span class="glyphicon glyphicon-home home">
                Home</span>
                <% end %>
             </li>
             <li class="">
               <%= link_to users_path do %>
               <span class="glyphicon glyphicon-user users">
               Users</span>
               <% end %>
             </li>
             <li class="">
               <%= link_to books_path do %>
               <span class="glyphicon glyphicon-book books">
                Books</span>
               <% end %>
             </li>
             <li class="">
               <%= link_to destroy_user_session_path, method: :delete  do %>
               <span class="glyphicon glyphicon-log-out logout">
               logout</span>
               <% end %>
             </li>

             <% else %>
             <li class="">
               <%= link_to root_path do %>
               <span class="glyphicon glyphicon-home home">
               Home</span>
             <% end %>
             </li>
             <li class="">
               <%= link_to home_about_path do %>
               <span class="glyphicon glyphicon-link about">
               About</span>
               <% end %>
             </li>
             <li class="">
               <%= link_to new_user_registration_path do %>
               <span class="glyphicon glyphicon-edit sign_up">
               sign up</span>
               <% end %>
             </li>
             <li class="">
               <%= link_to new_user_session_path do %>
               <span class="glyphicon glyphicon-log-in sign_in">
               login</span>
               <% end %>
             </li>
             <% end %>
           </ul>
         </div>
         </div>
      </header>

    <div class="container">
      <%= yield %>
    </div>

    <footer>
      <div class="container">
      	<div class="row">
      	  <div class="col-xs-3 col-xs-offset-9">
    	  	 <p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
   </footer>
 </body>
</html>
